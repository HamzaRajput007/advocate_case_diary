<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/itemLayoutProfileImageId"
            android:layout_width="96dp"
            android:layout_marginRight="20dp"
            android:layout_height="96dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:text="Haider Sultan Cheema jnab ka nam bohot lamba hai "
                android:id="@+id/advocateNameID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:text="03215487965"
                android:id="@+id/advocatePhoneNumberID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:id="@+id/advocateEmailId"
                android:text="haidersultan@gmail.com"
                android:textSize="12dp"/>


        </LinearLayout>
    </LinearLayout>








</androidx.cardview.widget.CardView>